<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/clearTextView"
                style="@style/UtilityButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClearButtonClick"
                android:text="@string/text_clear_base" />

            <TextView
                style="@style/UtilityButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onReverseNumberButtonClick"
                android:text="+/-" />

            <TextView
                style="@style/UtilityButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onPercentageButtonClick"
                android:text="%" />

            <TextView
                style="@style/OperatorButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onOperatorButtonClick"
                android:text="รท" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4">

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="7" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="8" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="9" />

            <TextView
                style="@style/OperatorButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onOperatorButtonClick"
                android:text="ร" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4">

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="4" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="5" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="6" />

            <TextView
                style="@style/OperatorButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onOperatorButtonClick"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4">

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="1" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="2" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="3" />

            <TextView
                style="@style/OperatorButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onOperatorButtonClick"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:weightSum="4">

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="2"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="0" />

            <TextView
                style="@style/PrimaryButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onNumberButtonClick"
                android:text="," />

            <TextView
                style="@style/OperatorButton"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onEqualsButtonClick"
                android:text="=" />
        </TableRow>

    </TableLayout>

    <!--
        style="@style/Result"
        -->
    <TextView
        android:id="@+id/resultTextView"
        style="@style/Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>